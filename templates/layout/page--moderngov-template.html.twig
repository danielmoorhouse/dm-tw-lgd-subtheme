{% block header %}
  {% include '@dm_tw_sub/layout/header.html.twig' with {'page': page} %}
{% endblock %}

<div class="container mx-auto px-4">
  {breadcrumb}
</div>

<main class="main" id="main-content"> {# The "skip to content" link jumps to here. #}

  <div class="container mx-auto">
    <div class="flex flex-wrap">
      <aside class="w-full lg:w-1/4 bg-gray-100 p-4">
        {sidenav}
      </aside>

      <div class="w-full lg:w-3/4">
        <div class="px-4">
          {content}
        </div>
      </div>
    </div>
  </div>
</main>

{# Begin Footer Regions #}
{% block footer_sections %}
  <footer class="bg-gray-800 text-white">

    {# Begin Pre-footer #}
    {% block pre_footer %}
      {% if has_footer_first or has_footer_second or has_footer_third %}
        <div class="bg-gray-700 py-6">
          <div class="container mx-auto">
            <div class="flex flex-wrap -mx-4">
              {% if has_footer_first %}
                <div class="w-full md:w-1/3 px-4">
                  {{ page.footer_first }}
                </div>
              {% endif %}

              {% if has_footer_second %}
                <div class="w-full md:w-1/3 px-4">
                  {{ page.footer_second }}
                </div>
              {% endif %}

              {% if has_footer_third %}
                <div class="w-full md:w-1/3 px-4">
                  {{ page.footer_third }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}
    {# End Pre-footer #}

    {# Begin Footer #}
    {% block footer %}
      {% if has_footer %}
        <div class="py-6 bg-gray-900">
          <div class="container mx-auto">
            <div class="w-full">
              {{ page.footer }}
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}
    {# End Footer #}

    {# Begin Post-footer #}
    {% block post_footer %}
      {% if has_lower_footer_first or has_lower_footer_second or has_lower_footer_third %}
        <div class="bg-gray-700 py-4">
          <div class="container mx-auto">
            <div class="flex flex-wrap -mx-4">
              {% if has_lower_footer_first %}
                <div class="w-full md:w-1/3 px-4">
                  {{ page.lower_footer_first }}
                </div>
              {% endif %}

              {% if has_lower_footer_second %}
                <div class="w-full md:w-1/3 px-4">
                  {{ page.lower_footer_second }}
                </div>
              {% endif %}

              {% if has_lower_footer_third %}
                <div class="w-full md:w-1/3 px-4">
                  {{ page.lower_footer_third }}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}
    {# End Post-footer #}

  </footer>
{% endblock %}
{# End Footer Regions #}
