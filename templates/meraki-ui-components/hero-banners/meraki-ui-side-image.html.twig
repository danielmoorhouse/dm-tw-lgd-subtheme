    <div class="lg:flex">
        <div class="flex items-center justify-center w-full px-6 py-8 lg:h-[32rem] lg:w-1/2">
            <div class="max-w-xl">
                <h1 class="text-3xl font-semibold text-gray-800 dark:text-white lg:text-4xl">{{ banner_heading }}</h1>

                <p class="mt-4 text-sm text-gray-500 dark:text-gray-400 lg:text-base">{{ banner_text }}</p>

                <div class="flex flex-col mt-6 space-y-3 lg:space-y-0 lg:flex-row">

                {% for link in banner_links %}
                    <a href="{{ link['#url'] }}" class="block px-5 py-2 text-sm font-medium tracking-wider text-center text-white transition-colors duration-300 transform bg-gray-900 rounded-md hover:bg-gray-700">
                        {{ link['#text'] }}
                    </a>
                {% endfor %}
                
                </div>

            </div>
        </div>

        <div class="w-full h-64 lg:w-1/2 lg:h-auto">
            <div class="w-full h-full bg-cover" style="background-image: url({{ banner_image }})">
                <div class="w-full h-full {{  banner_image_overlay   }} {{ banner_image_overlay_opacity }}"></div>
            </div>
        </div>
    </div>