        <div class="modal-content">
            <div class="modal-head w-100 px-10">
            <span class="text-xl p-3 bg-purple-900 text-zinc-50">Section Editor</span> <br><br>
            <span class="text-xl p-3">{{ bundle }}</span>
                <span class="cursor-pointer close-modal text-red-500 float-right" data-modal-id="{{ paragraph.id.value }}"><i class="fa-solid fa-circle-xmark"></i></span>
            </div>  
              <span></span>
                {% set edit_form = drupal_entity_form('paragraph', paragraph.id.value) %}
                {{ edit_form|without('field_card_body_text') }}
        </div>
    </div> #}
</section>