<section class="logo-row-section py-12" id="logo-row-{{ paragraph.id.value }}">
         <a class="edit-button absolute right-32 p-2 z-50" title="Edit section content" data-component-id="{{ paragraph.id.value }}"><img src="/themes/custom/dm_tw_sub/assets/ui_icons/pen.png" alt=""></a>
<div class="container mx-auto max-w-3xl text-center">
<h3 class="text-xl font-semibold text_dark">{{ paragraph.field_additional_text.value }}</h3>
{% set logos = content|without('field_additional_text') %}
<div class="flex align-middle justify-center">
{% for logo in logos %}
<div class="max-w-full w-auto inline-flex align-middle justify-center text-center py-6 px-6 space-x-8">
    {{ logo }}
</div>
{% endfor %}
</div>
</div>
          {% include "@dm_tw_sub/paragraphs/includes/meraki-ui-modal.html.twig" with {
        'paragraph_id': paragraph.id.value,
        'bundle': 'Hero with Right Image'
        } 
      %}
</section>