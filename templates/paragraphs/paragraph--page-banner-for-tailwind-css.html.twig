
   <section id="{{ paragraph.id.value }}" class="p-0 min-w-full {{ paragraph.field_element_background.value }}">
    <div class="container px-6 py-16 mx-auto text-center {{ paragraph.field_text_colour.value }}">
        <div class="max-w-lg mx-auto">
            <h1 class="text-xl lg:text-5xl">
                {{ paragraph.field_banner_heading.value }}
            </h1>

            <p class="mt-6">
                {{ content.field_banner_text }}
            </p>

            <div class="w-full max-w-sm mx-auto mt-6 bg-white border rounded-md dark:border-gray-700 focus-within:border-blue-400 focus-within:ring focus-within:ring-blue-300 dark:focus-within:border-blue-300 focus-within:ring-opacity-40">
                <form class="flex flex-col md:flex-row">
                    <input type="email" id="email-input" placeholder="Enter your email address" class="flex-1 h-10 px-4 py-2 m-1 text-gray-700 placeholder-gray-400 bg-transparent border-none appearance-none dark:text-gray-200 focus:outline-none focus:placeholder-transparent focus:ring-0" />

                    <button type="button" class="h-10 px-4 py-2 m-1 text-white transition-colors duration-300 transform bg-indigo-900 rounded-md hover:bg-blue-500 focus:outline-none focus:bg-blue-500">
                        Join Us
                    </button>
                </form>
            </div>
        </div>

        {% if paragraph.field_trusted_by %}
        <div class="max-w-screen-xl mx-auto mt-20">

            <div class="grid grid-cols-2 gap-8 md:grid-cols-6 lg:grid-cols-5">
               {% for item in paragraph.field_trusted_by %}       
                <div class="flex items-center justify-center col-span-1 md:col-span-2 lg:col-span-1">
                    <!-- Add content for the grid item if needed -->
                    <img class="opacity-50" src="{{ item|file_url }}" style="width:60%;">
                </div>
                {# {% endfor %} #}
        {% endfor %} 
            </div>
        </div>
        {% else %}
            <h2>No items</h2>
        {% endif %}
    </div>
    </section>