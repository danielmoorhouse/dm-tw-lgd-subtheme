
<section id="hero-fw-image"
  class="relative bg-cover bg-center bg-no-repeat" style="background-image: url('{{ paragraph.field_hero_bg_full|file_url }}')"
>

  <div
    class="absolute inset-0 bg-gray-900/75 sm:bg-transparent sm:from-gray-900/95 sm:to-gray-900/25 ltr:sm:bg-gradient-to-r rtl:sm:bg-gradient-to-l"
  ></div>
  <a class="edit-button absolute right-32 p-2 z-auto bg-transparent" title="Edit hero content" data-component-id="{{ paragraph.id.value }}"><img src="/themes/custom/dm_tw_sub/assets/ui_icons/pen.png" alt=""></a>
  <div class="relative mx-auto max-w-screen-xl px-2 py-40 sm:px-6 lg:flex lg:h-fit lg:items-center lg:px-4">
 
    <div class="max-w-3xl text-center sm:text-left py-12 px-10 rounded-xl bg-gray-600/70">
      <h1 class="text-3xl font-normal sm:text-5xl">
        {{ paragraph.field_banner_heading.value }}

        <span class="highlighted block text-3xl lg:text-6xl font-bold leading-loose"> {{ paragraph.field_section_heading_bright.value }} </span>
        
      </h1>

      <p class="mt-4 max-w-lg text-white sm:text-xl/relaxed">
   {{ paragraph.field_banner_text.value }}
      </p>

      <div class="mt-8 flex flex-wrap gap-4 text-center">
    <a href="{{ paragraph.field_call_to_action.url }}" class="block button w-full rounded px-12 py-3 text-sm font-medium text-white shadow focus:outline-none focus:ring sm:w-auto">
         {{ paragraph.field_call_to_action.title }}
        </a>
      </div>
    </div>
  </div>
          {% include "@dm_tw_sub/paragraphs/includes/meraki-ui-modal.html.twig" with {
        'paragraph_id': paragraph.id.value,
        'bundle': 'Hyper UI Hero'
        } 
      %}
</section>