<section class="{{ paragraph.field_section_background.value }}" >
  <a class="edit-button absolute right-32 text-gray-700 bg-white p-2 z-auto" title="Edit section content" data-component-id="{{ paragraph.id.value }}"><img src="/themes/custom/dm_tw_sub/assets/ui_icons/pen.png" alt=""></a>

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
  <div class="grid gap-10 lg:grid-cols-2">
    <div class="flex flex-col justify-center md:pr-8 xl:pr-0 lg:max-w-lg">
      <div class="max-w-xl mb-6">
        <h2 class="max-w-lg mb-6 text-3xl font-semibold text_dark sm:text-4xl sm:leading-normal">
            {{ paragraph.field_section_title.value }}
        </h2>
        <p class="text-base text-gray-700 md:text-lg">
            {{ paragraph.field_section_intro_text.value }}
        </p>
      </div>
      <div>
        <a href="{{ paragraph.field_call_to_action.url }}" aria-label="" class="section-link rounded-md shadow-md inline-flex items-center font-semibold transition-colors duration-200 text_secondary hover:text-deep-purple-800">
          {{ paragraph.field_call_to_action.title }}
          <svg class="inline-block w-3 ml-2" fill="currentColor" viewBox="0 0 12 12">
            <path d="M9.707,5.293l-5-5A1,1,0,0,0,3.293,1.707L7.586,6,3.293,10.293a1,1,0,1,0,1.414,1.414l5-5A1,1,0,0,0,9.707,5.293Z"></path>
          </svg>
        </a>
      </div>
    </div>
    <div class="flex items-center justify-center -mx-4 lg:pl-8">
      <div class="flex flex-col items-end px-3">
      {% if paragraph.field_image_1 is not empty %}
        <img
          class="object-cover mb-6 rounded shadow-xl h-28 sm:h-48 xl:h-56 w-28 sm:w-48 xl:w-56 right-image-grid"
          src="{{ paragraph.field_image_1|file_url }}"
          alt=""
        />
        {% endif %}

    {% if paragraph.field_image_2 is not empty %}
        <img class="object-cover w-20 h-20 rounded shadow-xl sm:h-32 xl:h-40 sm:w-32 xl:w-40 right-image-grid" src="{{ paragraph.field_image_2|file_url }}" alt="" />
     {% endif %}
      </div>
      <div class="px-3">
         {% if paragraph.field_image_3 is not empty %}
        <img class="object-cover w-40 h-40 rounded shadow-xl sm:h-64 xl:h-80 sm:w-64 xl:w-80 right-image-grid" src="{{ paragraph.field_image_3|file_url }}" alt="" />
        {% endif %}
      </div>
    </div>
  </div>
</div>
    {% include "@dm_tw_sub/paragraphs/includes/meraki-ui-modal.html.twig" with {
        'paragraph_id': paragraph.id.value,
        'bundle': 'Feature Grid Component'
    } %} 
    </section>